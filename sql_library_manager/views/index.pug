extends layout

block content
  h1= Books
  p <a class="button" href="new_book">Create New Book</a>

  table
    thread 
      tr 
        th Title
        th Author 
        th Genre 
        th Year
      
    tbody 
      each book in books 
        tr
          td 
            a(href='/books' +book.id) #{book.title}
          td #{book.author}
          td #{book.genre} 
          td #{book.year}
